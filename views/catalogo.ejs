<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://kit.fontawesome.com/ef48f4e9ad.js" crossorigin="anonymous"></script>
  <title>BluBox - Catálogo</title>
</head>
<body>

  <!-- HEADER -->
  
  <%- include('partials/main-menu') %> 

  <!-- CATÁLOGO DE PELÍCULAS -->

  <section id="latest-added-films">
    <h1>Catálogo de películas</h1> 
    <div class="cards-container">
      <% peliculas.forEach(pelicula => { %>
        <a href="/pelicula/<%= pelicula.id %> ">
          <div class="card-inner">
            <img src="<%= pelicula.imagen[0] %>" alt="">
          </div>
        </a>
      <% }) %>
    </div>
  </section>

  <!-- FOOTER -->
  <%- include('partials/footer') %>

</body>
<script src="/javascripts/code.js"></script>
</html>

